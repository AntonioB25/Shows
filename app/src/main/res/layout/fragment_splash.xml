<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D1D72">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:src="@drawable/top_left_illustration"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:src="@drawable/top_right_illustration"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:src="@drawable/ic_bottom_left_illustration"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_bottom_right_illustration"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/splashTriangle"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:src="@drawable/triangle"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/splashShowsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shows"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>


</FrameLayout>